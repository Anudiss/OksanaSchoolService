<Page x:Class="School.Windows.AuthWindow.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:School.Windows.AuthWindow.Pages"
      xmlns:uc="clr-namespace:School.UserControls"
      mc:Ignorable="d" 
      Title="LoginPage">
    
    <Page.Resources>
        <Style TargetType="Button" BasedOn="{StaticResource Button}">
            <Setter Property="Padding" Value="13 7"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Page.Resources>
    
    <StackPanel Orientation="Vertical">
        <uc:InputField x:Name="Login" PlaceholderValue="Введите логин" LabelValue="Логин" Margin="0 5"/>
        <uc:PasswordField x:Name="Password" PasswordPlaceholderValue="Введите пароль" PasswordLabelValue="Пароль" Margin="0 0 0 5"/>
        <Button Content="Войти" HorizontalAlignment="Center" Click="Login_Click" />
    </StackPanel>
</Page>
